{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "php artisan serve --host=0.0.0.0 --port=$PORT",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "web",
      "source": {
        "type": "image",
        "image": "php:8.2-apache"
      },
      "variables": {
        "APP_NAME": "IoT Sensor System",
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "LOG_LEVEL": "error",
        "SESSION_DRIVER": "database",
        "CACHE_STORE": "database",
        "QUEUE_CONNECTION": "database"
      }
    },
    {
      "name": "mqtt-listener",
      "source": {
        "type": "image", 
        "image": "php:8.2-cli"
      },
      "variables": {
        "APP_ENV": "production"
      },
      "deploy": {
        "startCommand": "php mqtt-listener-production.php",
        "restartPolicyType": "ALWAYS"
      }
    }
  ]
}